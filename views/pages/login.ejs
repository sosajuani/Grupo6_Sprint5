<%- include("../partials/head",{title:"Iniciar sesion"})  %> 
<%- include("../partials/menuHeader.ejs")  %>  
    <!--LOGIN-->
    <div class="iniciar-sesion">
        <h3>INICIAR SESIÓN</h3>
        <img src="img/oso.png" alt="oso">
    </div>
    <section class="sectionLogin">
        <div class="divLogin">
            <div class="divLogin2">
                <form class="formLogin" action="/login" method="post">
                    <input type="email" value="<%= locals.oldEmail ? locals.oldEmail : null %> " placeholder="Email o usuario" name="email" id="email" required/>
                    <input type="password" placeholder="Contraseña" name="pass" id="password" required/>

                    <div class="recordarUser">
                        <input type="checkbox" name="recordarUsuario" value="Recordarme" checked>
                        <label for="terminos">Recordarme</label>
                    </div>

                    <% if(locals.email){ %>
                        El email ingresa no es valido 
                    <% } %> 
                    <% if(locals.password){ %>
                        La contraseña ingresada no es valida
                    <% } %> 
                    
                    <a href= "#">¿Olvidaste tu contraseña?</a>
                    <input type="submit" value="INGRESAR" class="button-login">
                    <p>¿No tenés una? <a href="/register">crear cuenta</a></p>
                    
                </form>
            </div> 
        </div>
    </section>
    <!-- FOOTER -->
<%- include("../partials/footerBase.ejs")  %>